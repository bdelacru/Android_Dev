<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/beauty_by_noemie"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="235dp"
        android:layout_height="230dp"
        android:adjustViewBounds="true"
        android:src="@drawable/july_15_specials"
        android:scaleType="fitCenter"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/JulySpecialImage" />
    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_noemie_hrodric"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:fontFamily="serif-monospace"
        android:paddingTop="8dp"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Name"
        android:text="Licensed Cosmetologist|Freelance Makeup artistry"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:fontFamily="serif-monospace"
        android:paddingLeft="10dp"
        />
    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:text="Email: BeautyByNoemie@gmail.com"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:fontFamily="serif-monospace"
        android:paddingLeft="10dp"/>
    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:text="Phone: 773-555-5555"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:fontFamily="serif-monospace"
        android:paddingLeft="10dp"/>
    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone"
        android:text="2561 N Cicero Ave, Chicago, IL 60639"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:fontFamily="serif-monospace"
        android:paddingLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALL TO MAKE AN APPOINTMENT!"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:padding="10dp"
        android:layout_below="@+id/address"
        android:layout_centerHorizontal="true" />
</RelativeLayout>